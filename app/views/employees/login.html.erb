<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card mt-5 shadow-sm">
          <div class="card-body">
            <h1 class="card-title text-center mb-4">Login</h1>
            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', autofocus: true, required: true, placeholder: 'Enter your email' %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', required: true, placeholder: 'Enter your password' %>
            </div>

            <div class="d-grid mb-3">
              <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
            </div>

            <div class="text-center">
              <%= link_to 'Sign up', signup_path, class: 'btn btn-link' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
