<div class="dashboard-container">
  <header class="dashboard-header">
    <div class="header">
      <h1>Admin Dashboard</h1>
      <div class="header-right">
        <span><%= @admin.email %></span>
        <%= link_to 'Logout', logout_path, data: { method: :delete }, class: 'btn btn-danger' %>
      </div>
    </div>
  </header>
  
  <%= form_with url: upload_attendences_path, local: true, multipart: true do %>
    <div class="file-upload">
      <label for="file">Upload Attendance File</label>
      <%= file_field_tag :file %>
      <%= submit_tag 'Upload Attendance', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <table class="employee-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each_with_index do |employee, index| %>
        <tr class="<%= 'row-even' if index.even? %>">
          <td><%= employee.name %></td>
          <td><%= employee.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @employees %>
</div>
